{
  "name": "openclaw-knobase",
  "version": "1.0.0",
  "description": "Official OpenClaw skill for Knobase integration - connect your agent to Knobase workspaces",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "openclaw-knobase": "bin/cli.js",
    "knobase": "bin/cli.js"
  },
  "scripts": {
    "start": "node bin/cli.js",
    "setup": "node bin/setup.js",
    "auth": "node bin/auth.js",
    "connect": "node bin/connect.js",
    "status": "node bin/status.js",
    "webhook": "node bin/webhook.js",
    "test": "echo 'Error: no test specified' && exit 0",
    "prepublishOnly": "echo 'Ready to publish'",
    "lint": "echo 'Linting...' && exit 0"
  },
  "keywords": [
    "openclaw",
    "knobase",
    "ai",
    "agent",
    "webhook",
    "notifications",
    "cli"
  ],
  "author": "Knobase <team@knobase.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Knobase-AI/openclaw-knobase.git"
  },
  "bugs": {
    "url": "https://github.com/Knobase-AI/openclaw-knobase/issues"
  },
  "homepage": "https://github.com/Knobase-AI/openclaw-knobase#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "inquirer": "^9.2.12",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/**/*",
    "src/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "openclaw": {
    "skillName": "knobase",
    "displayName": "Knobase Integration",
    "description": "Connect OpenClaw to Knobase workspaces for @mentions and notifications",
    "version": "1.0.0",
    "author": "Knobase",
    "minOpenClawVersion": "0.1.0",
    "commands": [
      "knobase auth",
      "knobase connect",
      "knobase status",
      "knobase webhook start"
    ],
    "config": {
      "required": [
        "KNOBASE_API_KEY",
        "KNOBASE_WORKSPACE_ID"
      ],
      "optional": [
        "KNOBASE_WEBHOOK_SECRET",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_CHAT_ID"
      ]
    }
  }
}
